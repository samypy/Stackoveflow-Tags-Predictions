import pandas as pd

# Read the Excel file
excel_file = 'path/to/your/excel/file.xlsx'
excel_data = pd.read_excel(excel_file, sheet_name=None)

# Combine NAM sheets
nam_df = pd.concat([excel_data['NAM 1'], excel_data['NAM 2']])

# Combine EMEA sheets
emea_df = pd.concat([excel_data['EMEA 1'], excel_data['EMEA 2']])

# Combine APAC sheets
apac_df = pd.concat([excel_data['APAC 1'], excel_data['APAC 2']])

# Access the Global sheet
global_df = excel_data['Global']

