Sub ListFilesInFolder()
    Dim folderPath As String
    Dim fileName As String
    Dim folderName As String
    Dim objFSO As Object
    Dim objFolder As Object
    Dim objFile As Object
    Dim i As Integer
    
    ' Define the folder path to search
    folderPath = "C:\Your\Path\To\Search"
    
    ' Initialize the FileSystemObject
    Set objFSO = CreateObject("Scripting.FileSystemObject")
    
    ' Check if the specified folder exists
    If objFSO.FolderExists(folderPath) Then
        ' Get the folder name starting with "00552"
        folderName = Dir(folderPath & "\00552*", vbDirectory)
        
        ' Loop through matching folders (there might be multiple)
        Do While folderName <> ""
            ' Get the folder's full path
            folderPath = objFSO.BuildPath(folderPath, folderName)
            
            ' Set objFolder to the matching folder
            Set objFolder = objFSO.GetFolder(folderPath)
            
            ' List all files in the folder
            i = 1
            For Each objFile In objFolder.Files
                ' Output file names to the immediate window
                Debug.Print "File " & i & ": " & objFile.Name
                i = i + 1
            Next objFile
            
            ' Get the next matching folder, if any
            folderName = Dir
        Loop
    Else
        MsgBox "Folder not found: " & folderPath, vbExclamation
    End If
    
    ' Release the objects
    Set objFSO = Nothing
    Set objFolder = Nothing
    Set objFile = Nothing
End Sub
