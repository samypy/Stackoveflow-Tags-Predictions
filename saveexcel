Sub FindExactWord()
    Dim sentence As String
    Dim words() As String
    Dim i As Integer
    
    sentence = "This is a test sentence for testing purposes."
    
    ' Split the sentence into words
    words = Split(sentence, " ")
    
    ' Loop through each word and check if it matches the desired word
    For i = 0 To UBound(words)
        If StrComp(words(i), "test", vbTextCompare) = 0 Or StrComp(words(i), "testing", vbTextCompare) = 0 Then
            MsgBox "Exact word found!"
            Exit Sub
        End If
    Next i
    
    ' If the loop completes without finding the word
    MsgBox "Exact word not found!"
End Sub
pivot_df = df.pivot(index='Activity Type', columns='Month', values='Duration')
df = df.groupby(['Activity Type', 'Month']).sum().reset_index()
